<div class="span4 columns">
<% form_tag url(:refunds, :index, user_id: user_id ), method:'get', class:'form-inline' do %>
    <div class="control-group">
        <div class="btn-group" >
            <input type="radio" name="field" value="modified" id="modified" />
            <label class="btn <%= 'active' if @field == 'modified' %>" for="modified">更新时间</label>
            <input type="radio" name="field" value="created" id="created" />
            <label class="btn <%= 'active' if @field == 'created' %>" for="created">创建时间</label>
        </div>
    </div>
    <%= partial('shared/form_calendar') %>
    <div class="form-actions">
        <%= submit_tag '筛选', class:'btn btn-primary' %>
    </div>
<% end %>
</div>