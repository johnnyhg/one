<% content_for :header do %>
  <p class="lead">交易过滤器（<%=link_to '来一个', url(:filter_list, :new, user_id: user_id), :target => '_blank' %>）</p>
<% end %>
<div class="span8 columns" style="overflow: auto;">
<table id="filter_list" class="table table-bordered">
  <thead>
	<tr>
	    <th>名称</th>
	    <th colspan="2">价格区间</th>
      <th colspan="2">折扣区间</th>
	    <th>商家编码</th>
  	</tr>
  </thead>
  <% unless @filter_list.empty? %>
    <% @filter_list.each do |id, filter| %>
      <%= partial("filter_list/filter", locals: { filter: filter}) if filter.parent_ids.count == 0 %>
    <% end %>
  <% end %>
</table>
</div>
<% content_for :sidebar, partial("filter_list/sidebar", locals: { filters: @filter_list.values})  unless @filter_list.empty?  %>